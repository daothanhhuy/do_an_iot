<script
    src='https://cdn.jsdelivr.net/gh/linways/table-to-excel@v1.0.4/dist/tableToExcel.js'
></script>
<div class='container-fluid bg-gray logs-table'>
    <div>
        <h3>Enter Logs</h3>
        <button class='btn btn-sm btn-primary mt-4' id='btn-delete-all'>Delete
            All</button>
        <div class='mt-4 d-flex align-items-center'>
            <form method='GET' action='/enterlog/filter'>
                <input
                    type='text'
                    class='form-control-sm mr-4'
                    name='q'
                    id='input-filter'
                    class='mt-4'
                    placeholder='Enter your filter here'
                    required
                />
                <button
                    class='btn btn-sm btn-primary btn-apply mt-4'
                    id='btn-apply'
                >Apply</button>
            </form>
        </div>
    </div>
    <button id='btnExport' onclick='exportReportToExcel(this)'>EXPORT REPORT</button>
    <div class='row'>
        <h3></h3>
    </div>
    <div class='row' style='height:400px'>
        <table class='table'>
            <thead>
                <tr>
                    <th scope='col'>ID thiết bị</th>
                    <th scope='col'>Ip</th>
                    <th scope='col'>Tên thiết bị</th>
                    <th scope='col'>Ngày</th>
                </tr>
            </thead>
            <tbody>
                {{#each itemsObject}}
                    <tr>
                        <th scope='row'>{{attachTo}}</th>
                        <td>{{ip}}</td>
                        <td>{{name}}</td>
                        <td>{{createdAt}}</td>
                        <td>
                            <a
                                href=''
                                class='btn btn-link'
                                data-toggle='modal'
                                data-id='{{_id}}'
                                data-target='#delete-log-modal'
                            >Remove</a>
                            <a
                                href='/enterlog/detail/{{_id}}'
                                class='btn btn-link'
                                data-id='{{_id}}'
                            >Detail</a>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan='5' class='text-center'>
                            You don't have any logs yet
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class='row justify-content-center'>
        <nav aria-label='Page navigation example'>
            <ul class='pagination'>
                <li class='page-item' id='btn-previous'><a
                        class='page-link'
                        href='/logs?page={{{sum current -1}}}'
                    >Previous</a></li>
                <li class='page-item' id='btn-1'><a
                        class='page-link'
                        href='/logs?page=1'
                    >1</a></li>
                <p id='more' style='margin: 0 4px'> ... </p>
                <li class='page-item' id='btn-first'><a
                        class='page-link'
                        href='/logs?page={{current}}'
                    >{{{current}}}</a></li>
                <li class='page-item'><a
                        class='page-link'
                        id='btn-next-2'
                        href='/logs?page={{{sum current 1}}}'
                    >{{{sum current 1}}}</a></li>
                <li class='page-item'><a
                        class='page-link'
                        id='btn-next-3'
                        href='/logs?page={{{sum current 2}}}'
                    >{{{sum current 2}}}</a></li>
                <p id='more-to-last' style='margin: 0 4px'> ... </p>
                <li class='page-item' id='btn-last'><a
                        class='page-link'
                        href='/logs?page={{pages}}'
                    >{{pages}}</a></li>
                <li class='page-item' id='btn-next'><a
                        class='page-link'
                        href='/logs?page={{{sum current 1}}}'
                    >Next</a></li>
            </ul>
        </nav>
    </div>
</div>
{{! Confirm delete log }}
<div id='delete-log-modal' class='modal' tabindex='-1' role='dialog'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title'>Remove log?</h5>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                <p>Are you sure you want to remove this log</p>
            </div>
            <div class='modal-footer'>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                >Cancel</button>
                <button
                    id='btn-delete-log'
                    type='button'
                    class='btn btn-danger'
                >Delete</button>
            </div>
        </div>
    </div>
</div>

