<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>{{title}}</title>
        <link
            href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css'
            rel='stylesheet'
        />
        <link
            rel='stylesheet'
            href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css'
            integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm'
            crossorigin='anonymous'
        />
        <link rel='stylesheet' href='/css/app.css' />
    </head>
    <body>
        <div class='container'>
            <div class='forms'>
                <div class='form login'>
                    <span class='title'>Login</span>

                    <form>
                        <h4
                            class='wrong-login mt-4'
                            style='color: red;display:none'
                        >Wrong username or password</h4>
                        <div class='input-field'>
                            <input
                                type='text'
                                placeholder='Enter your email'
                                id='login-username'
                                required
                            />
                            <i class='uil uil-envelope icon'></i>
                        </div>
                        <div class='input-field'>
                            <input
                                type='password'
                                class='password'
                                id='login-password'
                                placeholder='Enter your password'
                                required
                            />
                            <i class='uil uil-lock icon'></i>
                            <i class='uil uil-eye-slash showHidePw'></i>
                        </div>

                        <div class='checkbox-text'>
                            <div class='checkbox-content'>
                                <input type='checkbox' id='logCheck' />
                                <label for='logCheck' class='text'>Remember me</label>
                            </div>

                            <a href='#' class='text'>Forgot password?</a>
                        </div>

                        <div class='input-field button'>
                            <button
                                type='submit'
                                class='btn btn-primary btn-login'
                            >Login Now</button>
                        </div>
                    </form>

                    <div class='login-signup'>
                        <span class='text'>Not a member?
                            <a href='#' class='text signup-link'>Signup now</a>
                        </span>
                    </div>
                </div>

                <!-- Registration Form -->
                <div class='form signup' onsubmit='return false'>
                    <span class='title'>Registration</span>

                    <form>
                        <h4
                            class='user-exist mt-4'
                            style='color: red;display:none'
                        >User is already exist</h4>
                        <div class='input-field'>
                            <input
                                type='text'
                                id='nickname'
                                placeholder='Enter your name'
                                required
                            />
                            <i class='uil uil-user'></i>
                        </div>
                        <div class='input-field'>
                            <input
                                type='text'
                                id='register-username'
                                placeholder='Enter your email'
                                required
                            />
                            <i class='uil uil-envelope icon'></i>
                        </div>
                        <div class='input-field'>
                            <input
                                type='password'
                                id='register-password'
                                class='password'
                                placeholder='Create a password'
                                required
                            />
                            <i class='uil uil-lock icon'></i>
                        </div>
                        <div class='input-field'>
                            <input
                                type='password'
                                class='password'
                                placeholder='Confirm a password'
                                required
                            />
                            <i class='uil uil-lock icon'></i>
                            <i class='uil uil-eye-slash showHidePw'></i>
                        </div>

                        <div class='checkbox-text'>
                            <div class='checkbox-content'>
                                <input type='checkbox' id='sigCheck' />
                                <label for='sigCheck' class='text'>OK</label>
                            </div>

                            <a href='#' class='text'>Forgot password?</a>
                        </div>

                        <div class='input-field button'>
                            <button
                                type='submit'
                                class='btn btn-primary btn-signup'
                            >Sign up</button>
                        </div>
                    </form>

                    <div class='login-signup'>
                        <span class='text'>Already a member?
                            <a href='#' class='text login-link'>Login now</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <script src='/scripts/login.js'></script>
        <script
            src='https://code.jquery.com/jquery-3.2.1.slim.min.js'
            integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN'
            crossorigin='anonymous'
        ></script>
        <script
            type='text/javascript'
            src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'
        ></script>
        <script
            src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js'
            integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q'
            crossorigin='anonymous'
        ></script>
        <script
            src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js'
            integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl'
            crossorigin='anonymous'
        ></script>
    </body>
</html>