<script src='https://unpkg.com/chart.js@2.8.0/dist/Chart.bundle.js'></script>
<script
    src='https://unpkg.com/chartjs-gauge@0.3.0/dist/chartjs-gauge.js'
></script>
<script
    src='https://unpkg.com/chartjs-plugin-datalabels@0.7.0/dist/chartjs-plugin-datalabels.js'
></script>
<div class='container-fluid '>
    <div class='row justify-content-center'>
        <div id='canvas-holder' style='width:35%;;margin-right:20px;'>
            <canvas id='temp-chart' width='600' height='300'></canvas>
        </div>
        <div id='canvas-holder' style='width:35%;'>
            <canvas id='humi-chart' width='600' height='300'></canvas>
        </div>
    </div>
    <div class='row justify-content-center' style='margin-top:40px'>
        <div id='canvas-holder' style='width:35%;;margin-right:20px;'>
            <canvas id='light-chart' width='600' height='300'></canvas>
        </div>
        <div id='canvas-holder' style='width:35%'>
            <canvas id='soil-humi-chart'></canvas>
        </div>
    </div>
    <hr>
    <h3>Manual control</h3>
    <div class="row justify-content-center mt-3">
        <div class="col col-3 d-flex">
            <p class= "">Motor</p>
            <label class="switch">
                <input type="checkbox" id="pump">
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col col-3 d-flex">
            <p class= "">Light</p>
            <label class="switch">
                <input type="checkbox" id="bulb">
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col col-3 d-flex">
            <p class= "">Servo</p>
            <label class="switch">
                <input type="checkbox" id="servo">
                <span class="slider round"></span>
            </label>
        </div>
    </div>
</div>

